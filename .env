# .env file for configuration (DO NOT commit this file to version control)

# ===== Runtime & HTTP =====
JOBS_USER_AGENT="Mozilla/5.0 (compatible; ReactJobsFinder/2.1; +https://example.com)"
HTTP_ACCEPT_LANGUAGE="en-US,en;q=0.9"
REQUEST_TIMEOUT_SECONDS=20
BASE_SLEEP_SECONDS=1.0
BACKOFF_MAX_SECONDS=8.0
MAX_RETRIES=4

# ===== Logging (read by debug_constants.py) =====
LOG_TS_FORMAT=%H:%M:%S
LOG_PREFIX=
STEP_ICON_START=▶
STEP_ICON_DONE=✔
STEP_ICON_ERR=✖
DEBUG_DEFAULT=false
PROGRESS_DEFAULT=true

# ===== Discovery backends (order matters) =====
# Allowed values: google_cse, serpapi
SEARCH_BACKENDS=google_cse,serpapi

# Google CSE (required if listed above)
GOOGLE_CSE_ENDPOINT="https://www.googleapis.com/customsearch/v1"
GOOGLE_CSE_KEY=your_google_key
GOOGLE_CSE_CX=your_google_cx
# Paging knobs (Google caps: num<=10, start<=100)
CSE_PAGE_SIZE=10
CSE_MAX_START=100

# SerpAPI (required if listed above)
SERPAPI_ENDPOINT=https://serpapi.com/search.json
SERPAPI_ENGINE=google
SERPAPI_KEY=your_serpapi_key

# ===== Domains =====
# Accept results from these apex domains (subdomains allowed by code)
ATS_ALLOWED_DOMAINS=boards.greenhouse.io,jobs.lever.co,myworkdayjobs.com,ashbyhq.com,smartrecruiters.com,www.smartrecruiters.com,careers.smartrecruiters.com
# Domains to restrict search queries
ATS_SEARCH_DOMAINS=boards.greenhouse.io,jobs.lever.co,myworkdayjobs.com,ashbyhq.com,smartrecruiters.com

# ===== Providers =====
# Choose any of: greenhouse,lever,ashby,smartrecruiters,generic
ATS_PROVIDERS=greenhouse,lever,ashby,smartrecruiters,generic

# Official API URL templates (required if provider enabled)
GREENHOUSE_API_TEMPLATE=https://boards-api.greenhouse.io/v1/boards/{company}/jobs?content=true
LEVER_API_TEMPLATE=https://api.lever.co/v0/postings/{company}?mode=json
ASHBY_API_TEMPLATE=https://api.ashbyhq.com/posting-api/job-board/{board}
SMARTRECRUITERS_API_TEMPLATE=https://api.smartrecruiters.com/v1/companies/{company}/postings?limit=100&offset=0
SMARTRECRUITERS_TOKEN=your_smart_token

# ===== CLI defaults =====
DEFAULT_LIMIT=10
DEFAULT_KEYWORDS=React,React Native

# ===== Output filename with today's date =====
# Use {date} placeholder — it will be replaced at runtime.
DEFAULT_OUT_PATH=jobs_{date}.csv
# Python strftime format
OUT_DATE_FMT=%Y-%m-%d
# IANA timezone for "today"
OUT_TZ=America/Chicago


